<h2 style="text-align:center">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'form-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
