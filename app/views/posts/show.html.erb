<%= stylesheet_link_tag 'styles'%>

<h1> show details about a specific post</h1>

<section>
   <article>
     <div>
        <h3><%= "Post ##{@post.id} by #{@post.author.name}"%></h3>
        <p><%= "Comments: #{@post.comments_counter}, Likes: #{@post.likes_counter}" %></p>
     </div>
     <p><%= @post.text%></p>
   </article>
   <ul>
     <% @post.recent_comments.each do |comment| %>
        <li><%=comment.text%></li>
        <% end %>
   </ul>
</section>